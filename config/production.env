# Production Environment Configuration for RWA Platform
# Copy this file to .env and customize for your environment

# Database Configuration
export CANTON_DB_USER="canton"
export CANTON_DB_PASSWORD="canton_password"
export JSON_API_DB_USER="json_api"
export JSON_API_DB_PASSWORD="json_api_password"

# Canton Configuration
export CANTON_PARTICIPANT_ID="participant1"
export CANTON_CONFIG_FILE="config/canton-production.conf"

# JSON API Configuration
export JSON_API_CONFIG_FILE="config/json-api-production.conf"
export JSON_API_PORT="7575"

# JWT Configuration
export JWT_PRIVATE_KEY_FILE="config/jwt/jwt-sign.key"
export JWT_EXPIRY_HOURS="224"
export JWT_SCOPE="daml_ledger_api"
export RWA_APPLICATION_ID="rwa-platform-api"

# SSL/TLS Configuration
export SSL_CERT_PATH="/etc/ssl/certs/rwa-platform.crt"
export SSL_KEY_PATH="/etc/ssl/private/rwa-platform.key"

# Application Configuration
export NODE_ENV="production"
export API_BASE_URL="https://your-domain.com/api"
export FRONTEND_URL="https://your-frontend-domain.com"

# Logging Configuration
export LOG_LEVEL="INFO"
export LOG_FILE="/var/log/rwa-platform/app.log"

# Security Configuration
export CORS_ORIGINS="https://your-frontend-domain.com"
export RATE_LIMIT_WINDOW="900"  # 15 minutes
export RATE_LIMIT_MAX="100"     # requests per window

# Backup Configuration
export BACKUP_S3_BUCKET="your-backup-bucket"
export BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM